<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    android:padding="40dp">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Randevu Al"
        android:id="@+id/rand_al"
        android:background="@drawable/gradient"
        android:layout_gravity="center_horizontal"


        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Randevu İptal Et"
        android:id="@+id/rand_iptal"
        android:background="@drawable/gradient"
        android:layout_gravity="center_horizontal"


        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="RSınav Randevusu Al"
        android:id="@+id/rand_sinav"
        android:background="@drawable/gradient"
        android:layout_gravity="center_horizontal"


        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="USER REGISTER"
        android:id="@+id/user_add"
        android:background="@drawable/gradient"
        android:layout_gravity="center_horizontal"


        />

</LinearLayout>